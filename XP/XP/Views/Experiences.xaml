<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XP.Views.Experiences">

    <ContentPage.Content>
        <StackLayout
            BackgroundColor="#edd8c9">
            <Label Text="Experiences"
                   HorizontalOptions="CenterAndExpand"
                   FontSize="Large">

            </Label>
            <StackLayout 
                     HorizontalOptions="CenterAndExpand"
                    WidthRequest="300"
                     x:Name="ExpStack">
            </StackLayout>
            <Button
                Clicked="Recherche"
                Text="Recherche">
                
            </Button>
            <Button
                Clicked="ExperienceUser"
                Text="Mes expériences">

            </Button>
            <Button
                Clicked="Logout"
                Text="Deconnexion">

            </Button>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>